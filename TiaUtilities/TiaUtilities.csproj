<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <StartupObject>TiaXmlReader.Program</StartupObject>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <Optimize>True</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="!!TO-DO!!.txt" />
    <None Remove="Languages\en-US.json" />
    <None Remove="Languages\it-IT.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="!!TO-DO!!.txt" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Languages\en-US.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Languages\it-IT.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ClosedXML" Version="0.102.2" />
    <PackageReference Include="FastColoredTextBox.Net6" Version="1.0.0" />
    <PackageReference Include="InformationBox" Version="1.3.0.152" />
    <PackageReference Include="Jint" Version="3.1.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="WindowsAPICodePack" Version="7.0.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SimaticML\SimaticML.csproj">
      <Private>True</Private>
      <ReferenceOutputAssembly>True</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="CustomControls\FlatComboBox.cs">
      <SubType>Component</SubType>
    </Compile>
    <Compile Update="CustomControls\FlatTextBox.cs">
      <SubType>Component</SubType>
    </Compile>
    <Compile Update="DBDuplicationForm.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Generation\Alarms\GenerationForm\AlarmGenerationForm.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Generation\Configuration\ConfigForm.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Generation\IO\GenerationForm\ExcelImporter\IOGenerationExcelImportForm.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Generation\IO\GenerationForm\IOGenerationForm.cs" />
    <Compile Update="MainImportExportForm.cs">
      <SubType>Form</SubType>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Mentions.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>